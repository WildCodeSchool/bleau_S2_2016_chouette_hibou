{% extends 'base.html.twig' %}

{% block title %}
    Bijoux -
{% endblock %}

{% block body %}

    <div class="main">
        <ul id="og-grid" class="og-grid">
            {% for modele in modeles %}
                <li>
                    <a href="#" data-largesrc="{{ asset('uploads/images/' ~ modele.url) }}" class="imglg" data-title="{{ modele.titre }}" data-description="{{ modele.contenu|raw }}">
                        <img src="{{ modele.url | imagine_filter('my_thumb') }}" class="thumbs" alt="{{ modele.alt }}"/>
                    </a>
                </li>
            {% endfor %}

        </ul>
    </div>

    <div class="navigation center">
        {{ knp_pagination_render(modeles) }}
    </div>

{% endblock %}
