{% extends 'base.html.twig' %}

{% block header %}
    {% include '@Chouettes/Default/navbar.html.twig' %}
{% endblock %}

{% block body %}

    <div class="container admin">
    <h1>Liste des modèles</h1>

    <table class="responsive-table bordered striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Titre</th>
                <th >Contenu</th>
                <th>Lien</th>
                <th>Ajouter à<br> l'accueil</th>
                <th>Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for modele in modeles %}
            <tr>
                <td><img src="{{ asset('uploads/images/') }}{{ modele.image }}" alt="{{ modele.image.alt }}"></td>
                <td>{{ modele.titre }}</td>
                <td>{{ modele.contenu }}</td>
                <td wordwrap>{{ modele.lien }}</td>
                <td>{% if modele.addblock %}Yes{% else %}No{% endif %}</td>
                <td>
                    <div class="boutons">
                            <a href="{{ path('modele_edit', { 'id': modele.id }) }}" title="Editer"><i class="material-icons">edit</i></a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="boutons">
                <a href="{{ path('modele_new') }}" title="Créer un nouveau modèle"><i class="material-icons">add_circle</i></a>
                <a href="{{ path('admin_homepage') }}" title="Retourner à l'accueil de l'administration"><i class="material-icons">dashboard</i></a>
        </div>

    </div>

{% endblock %}
