    <title>{% block title %}Chouettes Hiboux et Bijoux{% endblock %}</title>
</head>




{% block header %}
{% endblock %}


{% block body %}
{%  endblock %}



<footer class="page-footer">
    <div class="container">
        <div class="row" id="row-footer">
            <div class="col l3 m3 s12 center">
                <h5 class = "h5footer">Catégories</h5>
                <ul>
                    <li><a class="doudousFooter" href="{{ path ('chouettes_doudous') }}">Les doudous</a></li>
                    <li><a class="bijouxFooter" href="{{ path ('chouettes_bijoux') }}">Les bijoux</a></li>
                    <li><a class="accessoiresFooter" href="{{ path ('chouettes_accessoires') }}">Les accessoires</a></li>
                </ul>
            </div>
            <div class="col l3 m3 s12 center">
                <h5 class = "h5footer">A propos</h5>
                <ul>
                    <li><a class="whoamiFooter" href="{{ path ('chouettes_about') }}">Qui suis-je ?</a></li>
                </ul>
            </div>
            <div class="col l3 m3 s12 center">
                <h5 class = "h5footer">Contact</h5>
                <ul>
                    <li><a class="contactmeFooter" href="{{ path ('chouettes_contact') }}">M'écrire</a></li>
                </ul>
            </div>
            <div class="col l3 m3 s12 center">
                <h5 class = "h5footer">Me suivre </h5>
                <div class="row">
                    <div class="col l6 m6 s6 xs6 center">
                        <a class="responsive-img social" href="https://www.facebook.com/leshibouxdesophie/" target = _blank><img class="responsive-img" data-alt-src="{{ asset ('bundles/chouettes/images/chouettefVerteOuvert.png') }}" src="{{ asset ('bundles/chouettes/images/chouettefVerteFerme.png') }}" /></a>
                    </div>
                    <div class="col l6 m6 s6 xs6 center">
                        <a class="responsive-img social chouette2" href="https://www.facebook.com/leshibouxdesophie/" target = _blank><img class="responsive-img" data-alt-src="{{ asset ('bundles/chouettes/images/chouettefVioletOuvert.png') }}" src="{{ asset ('bundles/chouettes/images/chouettefVioletFerme.png') }}" /></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="connect">

        </div>

        <div class="footer-copyright">
                © 2016 All Rights Reserved Chouettes Hiboux Doudous | Design by WCS | {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
            <a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out"" aria-hidden="true"></i>
            </a>
        {% else %}
            <a href="{{ path('admin_homepage') }}"><i class="fa fa-key" aria-hidden="true"></i></a>
            {% endif %}
        </div>
</footer>

{% block javascripts %}
    <!--  Scripts-->
    <!-- Compiled and minified JavaScript -->
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="{{ asset ('bundles/chouettes/js/materialize.js') }}"></script>
    <script src="{{ asset ('bundles/chouettes/js/init.js') }}"></script>
    <script src="{{ asset ('bundles/chouettes/js/modernizr.custom.js') }}"></script>
    <script src="{{ asset ('bundles/chouettes/js/grid.js') }}"></script>
    <script src="{{ asset ('bundles/chouettes/js/chouettesHiboux.js') }}"></script>


{% endblock %}


